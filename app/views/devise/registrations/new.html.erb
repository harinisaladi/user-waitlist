<div id="request-invite" class="modal" style="display: <%= @user.errors.any? ? 'block' : 'none';%>"> 
  <%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name) , :html => {:class => 'form-horizontal' } do |f| %> 
    <div class="modal-header">
         <a class="close" data-dismiss="modal">&#215;</a>
         <h3 id="myModalLabel">Rent amazing photography gear</h3>
    </div>
    <div class="modal-body">
      <%= f.error_notification %>
      <div>Lumoid hasn't launched yet. Sign up below, so we can send you an invite as soon as we're ready</div> </br>
      <%= f.input :email, :label => false, :placeholder => 'email' %>
    </div>
    <div class="modal-footer">
      <%= f.submit "Sign Up", :class => "btn btn-primary", :id => 'invitation_button' %>
    </div>
  <% end %> 
</div>
<div id="call-to-action" class="pull-right">
  <div id="hook">
    <p class="headline">Rent the world's best photography gear.</p>

    <p id="coming-soon">Sign up to be notified when we launch.</p>
  </div>
  <div id="signup">
    <a class="btn btn-large btn-success btn-block" data-toggle="modal" href="#request-invite">Try Lumoid</a>
  </div>
</div>